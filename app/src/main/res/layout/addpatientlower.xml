<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/loginCream">

        <EditText
            android:id="@+id/patientName"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_perm_identity_black_24dp"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:hint="Miguel Angel Beascoa"
            android:inputType="text"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/patientphno"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:hint="+34 617333789"
            android:inputType="phone"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/patientEmail"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="ma.beascoa@@gmail.com"
            android:inputType="textWebEmailAddress"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/patientDob"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:hint="Fecha de Nacimiento DD/MM/YYYY"
            android:inputType="date"
            android:textColorHint="@android:color/darker_gray" />

        <EditText
            android:id="@+id/patientAdd"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:hint="DirecciÃ³n "
            android:inputType="textPostalAddress"
            android:textColorHint="@android:color/darker_gray" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onRadioClicked"
                android:text="Hombre"
                android:textColor="@color/actionBar" />

            <RadioButton
                android:id="@+id/femaleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onRadioClicked"
                android:text="Mujer"
                android:textColor="@color/actionBar" />
        </RadioGroup>

        <Button
            android:layout_width="270dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/shadowlightgreen"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onSaveClick"
            android:text="Guardar Paciente/Ciudadano"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>